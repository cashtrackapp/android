  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingTop="7sp">
  
  <Button
    android:id="@+id/NewMessageButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Send Message">
  </Button>
  
  <ListView
	  android:id="@+id/AlertList"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
	</ListView>
  
</LinearLayout>
